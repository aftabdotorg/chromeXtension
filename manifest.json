{
  "name": "Dark Might",
  "description": "Switch between dark and light mode",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["index.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Appearance",
    "default_popup": "index.html"
  },
  "permissions": ["https://*/*", "http://*/*", "tabs"]
}
